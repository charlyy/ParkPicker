    <ul class="right">
      <li class="has-dropdown">
        <a href="#">What Park?</a>
        <ul class="dropdown">
          <li><a href="basketball_search">Basketball</a></li>
          <li><a href="tennis_search">Tennis</a></li>
          <li><a href="soccer_search">Soccer</a></li>
          <li><a href="track_search">Track</a></li>
          <li><a href="dog_search">Dog</a></li>
          <li><a href="playground_search">Playground</a></li>
        </ul>
      </li>
    </ul>
</nav>

  <body>

    <%= yield %>
    <%= javascript_include_tag "application" %>
  </body>
</html>